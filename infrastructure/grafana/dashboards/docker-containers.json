{
  "title": "Docker Containers",
  "uid": "docker-containers",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Containers Running",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
      "targets": [{
        "expr": "count(container_last_seen{name!=\"\"})",
        "legendFormat": "",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 2,
      "title": "Total CPU Usage",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
      "targets": [{
        "expr": "sum(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m])) * 100",
        "legendFormat": "",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 300},
              {"color": "red", "value": 500}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 3,
      "title": "Total Memory Usage",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
      "targets": [{
        "expr": "sum(container_memory_usage_bytes{name!=\"\"})",
        "legendFormat": "",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 4,
      "title": "CPU Usage per Container",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 6},
      "targets": [{
        "expr": "rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100",
        "legendFormat": "{{name}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Memory Usage per Container",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 6},
      "targets": [{
        "expr": "container_memory_usage_bytes{name!=\"\"}",
        "legendFormat": "{{name}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Network I/O per Container",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{name!=\"\"}[5m])",
          "legendFormat": "{{name}} RX",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{name!=\"\"}[5m])",
          "legendFormat": "{{name}} TX",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "lineWidth": 1
          }
        }
      }
    }
  ]
}
