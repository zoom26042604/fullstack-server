{
  "title": "Infrastructure Health",
  "uid": "infrastructure-health",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Traefik",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [{
        "expr": "up{job=\"traefik\"}",
        "legendFormat": "",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "options": {"0": {"text": "Down", "color": "red"}}},
            {"type": "value", "options": {"1": {"text": "Healthy", "color": "green"}}}
          ],
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 2,
      "title": "PostgreSQL",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [{
        "expr": "count(container_last_seen{name=~\".*postgres.*\"})",
        "legendFormat": "",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "options": {"0": {"text": "Down", "color": "red"}}},
            {"type": "special", "options": {"match": "null", "result": {"text": "Down", "color": "red"}}},
            {"type": "range", "options": {"from": 1, "to": 999, "result": {"text": "Healthy", "color": "green"}}}
          ],
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 3,
      "title": "Redis",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [{
        "expr": "count(container_last_seen{name=~\".*redis.*\"})",
        "legendFormat": "",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "options": {"0": {"text": "Down", "color": "red"}}},
            {"type": "special", "options": {"match": "null", "result": {"text": "Down", "color": "red"}}},
            {"type": "range", "options": {"from": 1, "to": 999, "result": {"text": "Healthy", "color": "green"}}}
          ],
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 4,
      "title": "Prometheus",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [{
        "expr": "up{job=\"prometheus\"}",
        "legendFormat": "",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "options": {"0": {"text": "Down", "color": "red"}}},
            {"type": "value", "options": {"1": {"text": "Healthy", "color": "green"}}}
          ],
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 5,
      "title": "Services Status Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 4},
      "targets": [{
        "expr": "up",
        "legendFormat": "{{job}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Traefik Requests/s",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [{
        "expr": "rate(traefik_service_requests_total[5m])",
        "legendFormat": "{{service}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "lineWidth": 2
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Response Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [{
        "expr": "rate(traefik_service_request_duration_seconds_sum[5m]) / rate(traefik_service_requests_total[5m]) * 1000",
        "legendFormat": "{{service}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    }
  ]
}
